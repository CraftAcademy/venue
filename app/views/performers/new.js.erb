var html = "<%= escape_javascript(render partial: 'form', locals: { action: :create })%>"
var modal = showPartialAsModal(html, {width: '90vw', height: '950px'});
resizableModal(modal, 70);
customUpload('performer_profile_image', 'profile-image-uploader', 100);
customUpload('performer_background_image', 'backgrount-image-uploader', 100);
var form = document.querySelector('.mui-form')
options = {
    placeholder: true,
    maxItemCount: 5,
    placeholderValue: 'Genre'
}
showMultiSelect('performer_genre_ids', options);
form.addEventListener('ajax:error', (event) => {
    showToast('Error', event.detail[0].message, {target: '#display_error_message'});
})
